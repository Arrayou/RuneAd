{%  extends 'layout.twig' %}

{% block content %}

<div class="container" style="margin-top:-30px;">
    {{ time() + (86400 * 30 )}}
    <div class="row">
        <div class="col-sm-12">
            {% include 'index/headnav.twig' %}

            <p>{{ content|raw }}</p>

            {% include 'index/sponsors.twig' %}

            {% if servers.currentPage() == 1 %}
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body text-center">
                    <a href="https://runead.com" target="_blank">
                        <img src="{{ url('public/img/brands/RuneAD500.gif') }}" class="img-fluid mb-2">
                    </a>
                    <p class="mb-0 small text-muted">
                        Looking for more servers? Check out our sister website!
                    </p>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="d-flex w-100">
        <div class="flex-fill w-100 pr-0 pr-lg-3">
            {% include 'index/listing.twig' %}
        </div>

        <div class="flex-fill text-right d-none d-lg-inline-block" style="min-width:160px;max-width:160px;">
            <div class="card border-0 shadow-sm mb-3 overflow-hidden">
                <a rel="nofollow"
                    target="_blank"
                    href="{{ url('banners')}}"
                    title="Vertical Banner">
                    <img src="{{ url('public/img/banner-loading-v.png') }}">
                </a>
            </div>
            

            <div class="card border-0 shadow-sm mb-3 overflow-hidden">
                <a rel="nofollow"
                    target="_blank"
                    href="{{ url('banners')}}"
                    title="Vertical Banner">
                    <img src="{{ url('public/img/banner-loading-v.png') }}">
                </a>
            </div>
        </div>
    </div>

    
</div>

{%  endblock %}
