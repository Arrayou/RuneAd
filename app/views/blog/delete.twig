{%  extends 'layout.twig' %}

 {% block content %}

 <div class="container" style="margin-top:-30px;">

     <div class="row mb-3">
         <div class="col-sm-12">
             <div class="card border-0 shadow-sm">
                 <div class="card-body">
                     <div class="d-flex align-items-center">
                         <div class="px-3 text-danger">
                             {{ icon("exclamation-triangle", 56, 56) }}
                         </div>
                         <div class="flex-fill w-100">
                             <h4 class="mb-0">{{ post.title }}</h4>
                             <p class="mb-0 small text-muted">
                                 Confirm you wish to delete this post below.
                             </p>
                         </div>
                         <div class="flex-fill text-right" style="min-width:250px;">
                             <a href="{{ url('blog') }}" class="btn btn-default">
                                 Blog Home
                             </a>
                             <a href="{{ url('blog/post/'~friendlyTitle(post.id~'-'~post.title)) }}" 
                                 class="btn btn-default {{ user is defined ? "" : "disabled" }}">
                                Back to Post
                             </a>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>

     <div class="row">
         <div class="col-sm-12 col-lg-12">
             <div class="card border-0 shadow-sm overflow-hidden">
                 {% if errors is defined %}
                     <div class="alert alert-danger rounded-0">
                         <p class="mb-2">Errors were encountered when creating your post:</p>
                         <ul class="mb-0 pl-3">
                             {% for key, value in errors %}
                             <li>&bull; {{ value }}</li>
                             {% endfor %}
                         </ul>
                     </div>
                 {% endif %}

                 <div class="card-body">
                     <h5 class="text-danger mb-0">Are you sure?</h5>
                     <p class="mb-5">
                         The action you're about to perform is irreversible, and there is no way to 
                         recover the data from this post. Only click confirm below if you're absolutely sure you want to do this.
                     </p>

                     <form method="post" action="{{ url('blog/delete/'~post.id) }}">
                         <div class="form-group mb-0">
                             <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                             <button type="submit" class="btn btn-danger">Confirm</button>
                             <a href="{{ url('blog/post/'~friendlyTitle(post.id~'-'~post.title)) }}" class="btn btn-link text-muted">
                                 Abort Mission
                             </a>
                         </div>
                     </form>
                 </div>
             </div>
         </div>
     </div>

     {{ content|raw }}
 </div>


 {%  endblock %}