{%  extends 'layout.twig' %}

 {% block content %}

 <div class="container" style="margin-top:-30px;">
     {% include 'blog/components/blogheader.twig' %}

     <div class="row mb-3">
         <div class="col-sm-12 col-lg-4">

             <div class="card border-0 shadow-sm mb-3">
                 <div class="card-body">
                     <p class="text-muted small mb-0">Total Blogs</p>
                     <p class="mb-0">{{ data['blogs']['total']|number_format }}</p>
                 </div>
             </div>

             <div class="card border-0 shadow-sm mb-3">
                 <div class="card-body">
                     <p class="text-muted small mb-0">Most Recent Blog</p>
                     <p class="mb-0">Link test here</p>

                 </div>
             </div>

         </div>

         <div class="col-sm-12 col-lg-8">
             <div class="card border-0 shadow-sm mb-3">
                 <div class="card-header">
                     <div class="row align-items-center">
                         <div class="col w-100">
                             <div class="float-left mt-1 mr-3 text-default">
                                 {{ icon('shop', 32, 32) }}
                             </div>
                             <p class="text-muted mb-0 small">Blog List</p>
                             <h6 class="mb-0">Most recent blogs</h6>
                         </div>
                     </div>
                 </div>
               
             </div>


             {% set totalPages = payments.lastPage() %}
             {% set current = payments.currentPage() %}

             {% set pageUrl = url('profile/payments/')  %}

             <nav aria-label="servernav" class="mt-5">
                 <ul class="pagination justify-content-center">
                     <li class="page-item {{ payments.onFirstPage() ? 'disabled' : '' }}">
                         <a class="page-link"
                             href="{{ pageUrl~'1' }}" tabindex="-1">
                             {{ icon('chevron-bar-left', 14, 14) }}
                         </a>
                     </li>

                     <li class="page-item {{ payments.onFirstPage() ? 'disabled' : '' }}">
                         <a class="page-link"
                             href="{{ pageUrl ~ (current == 1 ? 1 : current - 1) }}" tabindex="-1">
                             {{ icon('chevron-left', 14, 14) }}
                         </a>
                     </li>

                     {% if totalPages > 5 %}
                         {% set start = current < 3 ? 1 : current - 2 %}
                         {% set end   = start < 4 ? start + 4 : current + 2 %}

                         {% if end > totalPages %}
                             {% set end = totalPages %}
                         {% endif %}

                         {% if start + 4 >= totalPages %}
                             {% set start = totalPages - 4 %}
                         {% endif %}
                     {% else %}
                         {% set start = 1 %}
                         {% set end   = payments.lastPage() %}
                     {% endif %}

                     {% for p in start..end %}
                     <li class="page-item {{ current == p ? ' active' : ''}}">
                         <a class="page-link" href="{{ pageUrl ~ p }}">
                             {{ p }}
                         </a>
                     </li>
                     {% endfor %}

                     <li class="page-item {{ current >= totalPages ? 'disabled' : '' }}">
                         <a class="page-link"
                             href="{{ pageUrl~(current == totalPages ? totalPages : current + 1) }}">
                             {{ icon('chevron-right', 14, 14) }}
                         </a>
                     </li>

                     <li class="page-item {{ current >= totalPages ? 'disabled' : '' }}">
                         <a class="page-link"
                             href="{{ pageUrl ~ totalPages }}">
                             {{ icon('chevron-bar-right', 14, 14) }}
                         </a>
                     </li>
                 </ul>
             </nav>
         </div>
     </div>

     {{ content|raw }}
 </div>

 {%  endblock %}
