<div class="row">
    <div class="col-sm-12">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body" style="line-height:.8em;">
                <div class="d-flex align-items-center">
                    <div class="flex-fill pr-3">
                        <img src="{{ avatar(user.user_id, user.avatar) }}"
                        class="rounded-circle mr-3"
                        height="60">
                    </div>
                    <div class="flex-fill w-100">
                        
                        <h5 class="mb-0">
                            {{ icon('bootstrap', 32, 32) }} -Blog Title-
                        </h5>
                        
                        <small class="text-muted">Author: {{ blog.owner }}</small><br>
                        <small class="text-muted">Posted: -Time-</small>
                    </div>
                    <div class="flex-fill w-100 text-right">
                        <a href="{{ url('blog') }}" class="btn btn-default btn-sm">
                            Blog Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body" style="line-height:.8em;">
                <div class="d-flex align-items-center">
                    -Blog Text-
                </div>
            </div>
        </div>
    </div>
</div> 
