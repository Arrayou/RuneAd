{%  extends 'layout.twig' %}

{% block content %}

    <div class="container" style="margin-top:-30px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12 col-lg-3">
                                <div class="sticky-top" style="top:20px;">
                                    <p class="font-weight-bold text-uppercase small">
                                        Contributors
                                    </p>
                                    <div id="contributors">

                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-lg-9">
                                <h5 class="font-weight-bold" id="start">Git Commits</h5>
                                <hr>
                                <div id="updates">
                                    <i class="fad fa-spinner fa-pulse"></i> Loading...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    $(document).ready(function() {
         $.ajaxq('UpdateQueue', {
             url: '{{ url("commits") }}',
             type: 'POST',
             complete: function (data) {

             },
             success: function (json) {
                 $('#updates').html(json.message);
             },
             error: function(data) {
                 console.log(data.responseText);
             }
         });

         $.ajaxq('UpdateQueue', {
             url: '{{ url("contributors") }}',
             type: 'POST',
             complete: function (data) {

             },
             success: function (json) {
                 $('#contributors').html(json.message);
             },
             error: function(data) {
                 console.log(data.responseText);
             }
         });
        });
    </script>

    {{ content|raw }}
{%  endblock %}
