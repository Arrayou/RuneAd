{%  extends 'layout.twig' %}

{% block content %}
<section style="margin-top:-30px;">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-fill px-4 pr-5 text-center">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-table mr-1"></i>
                                    Vote Data By Time
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>All Time</th>
                                                    <th>Last Month</th>
                                                    <th>This Month</th>
                                                    <th>Last 7 Days</th>
                                                    <th>Last 24 Hours</th>
                                                    <th>Last Hour</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr>
                                                    <td>{{ data['votes']['total']|number_format }}</td>
                                                    <td>{{ data['votes']['lastmonth']|number_format }}</td>
                                                    <td>{{ data['votes']['month']|number_format }}</td>
                                                    <td>{{ data['votes']['week']|number_format }}</td>
                                                    <td>{{ data['votes']['day']|number_format }}</td>
                                                    <td>{{ data['votes']['hour']|number_format }}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>



                            </div>
                        </div>
                    </div>
                </div>

                {{ content|raw }}
            </div>
        </div>
    </div>
</section>

{%  endblock %}
