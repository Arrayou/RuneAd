{% include 'chart_config.twig' %}

<script>
$(document).ready(function() {
    options.scales.xAxes = [{
        barPercentage: 0,
        ticks: { display: true },
        gridLines: {
            color: "rgba(0, 0, 0, 0)",
            drawBorder: false,
        }
    }];
    options.scales.yAxes = [{
        ticks: { display: true },
        gridLines: {  drawBorder: true }
    }];
    let element = document.getElementById("chart-orders");
    let context = element.getContext("2d");
    let chart = new Chart(context, {
        type: 'line',
        data: {
            labels: {{ chart_keys|json_encode|raw }},
            datasets: [
                {
                    label: 'Earned',
                    data: {{ chart_values|json_encode|raw }},
                    borderColor: window.chartColors.purple,
                    backgroundColor:  window.chartColors.purpleLight,
                    hoverBackgroundColor: window.chartColors.purpleLight,
                    barWidth: 2,
                }
            ]
        },
        options: options
    });
});
</script>
