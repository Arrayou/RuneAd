{% block admin_sidebar %}
<nav class="navbar navbar-main navbar-vertical fixed-left navbar-expand-md navbar-light shadow-sm" id="sidenav-main">
    <div class="container-fluid">
        <!-- Toggler -->
        <button class="navbar-toggler" type="button" data-toggle="collapse"
            data-target="#sidenav-collapse-main" aria-controls="sidenav-main"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Brand -->
        <a class="navbar-brand pt-0" href="{{ url('admin') }}">
            RuneAd
        </a>

        <!-- User -->
        <ul class="nav align-items-center d-md-none">
            <li class="nav-item dropdown">
                <i class="fas fa-user-circle"></i> {{ user.getName() }}
            </li>
        </ul>

        <!-- Collapse -->
        <div class="collapse navbar-collapse" id="sidenav-collapse-main">
            <!-- Collapse header -->
            <div class="navbar-collapse-header d-md-none">
                <div class="row">
                    <div class="col-6 collapse-brand">
                        <a href="{{ url('admin') }}">
                            Dashboard
                        </a>
                    </div>
                    <div class="col-6 collapse-close">
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle sidenav">
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link {{ controller == "admin" and action == 'index' ? "active" : "" }}"
                       href="{{ url('admin') }}">
                        <i class="fal fa-chart-bar text-primary fa-fw mr-2"></i>
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                <a class="nav-link {{ controller == "payments" and action == 'index' ? "active" : "" }}"
                    href="{{ url('admin/payments') }}">
                     <i class="fal fa-dollar-sign text-primary fa-fw mr-2"></i>
                     Payments
                 </a>
             </li>

             <li class="nav-item">
                 <a class="nav-link {{ controller == "sponsor" and action == 'index' ? "active" : "" }}"
                       href="{{ url('admin/sponsor') }}">
                        <i class="fal fa-crown text-primary fa-fw mr-2"></i>
                        Sponsor Slots
                    </a>
                </li>

                <li class="nav-item">
                  <a class="nav-link {{ controller == "premium" and action == 'index' ? "active" : "" }}"
                       href="{{ url('admin/sponsor') }}">
                        <i class="fal fa-star text-primary fa-fw mr-2"></i>
                        Premium
                    </a>
                </li>
            </ul>

            <hr class="my-3">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class=" nav-link" href="{{ url('') }}">
                        <i class="fal fa-home text-primary fa-fw"></i>
                        Home
                    </a>
                </li>

                <li class="nav-item active">
                    <a class="nav-link text-danger" href="{{ url('logout') }}">
                        <i class="fal fa-sign-out text-danger fa-fw"></i>
                        Sign Out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% endblock %}
