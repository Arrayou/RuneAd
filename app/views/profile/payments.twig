{%  extends 'layout.twig' %}

{% block content %}

<div class="container" style="margin-top:-30px;">
    <div class="row">
        <div class="col-sm-12">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body" style="line-height:.8em;">
                    <div class="d-flex align-items-center">
                        <div class="flex-fill pr-3">
                            <img src="{{ avatar(user.user_id, user.avatar) }}"
                            class="rounded-circle mr-3"
                            height="60">
                        </div>
                        <div class="flex-fill w-100">
                            <small class="text-muted">Profile</small>
                            <h5 class="mb-0">
                                {{ user.username }} #{{ user.discriminator }}
                            </h5>
                        </div>
                        <div class="flex-fill w-100 text-right">
                            <a href="{{ url('servers/add') }}" class="btn btn-default btn-lg">Add Server</a>
                            <a href="{{ url('premium') }}" class="btn btn-success btn-lg">Go Premium</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-12 col-lg-4">

                        <div class="text-center" style="display:none;">
                            <div class="d-flex">
                                <div class="flex-fill w-100">
                                    <p class="mb-0 text-primary">{{ payment.email }}</p>
                                    <p class="small text-muted">Email</p>
                                </div>
                                <div class="flex-fill w-100">
                                    <p class="mb-0 text-primary">{{ payment.username }}</p>
                                    <p class="small text-muted">Username</p>
                                </div>
                                <div class="flex-fill w-100">
                                    <p class="mb-0 text-primary">{{ payment.ip_address }}</p>
                                    <p class="small text-muted">IP Paid</p>
                                </div>
                                <div class="flex-fill w-100">
                                    <p class="mb-0 text-primary">{{ payment.item_name }}</p>
                                    <p class="small text-muted">Item</p>
                                </div>
                                <div class="flex-fill w-100">
                                    <p class="mb-0 text-primary">${{ payment.paid|number_format(2) }}</p>
                                    <p class="small text-muted">Amount Paid</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>

    {{ content|raw }}
</div>


{%  endblock %}
