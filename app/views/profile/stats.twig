{%  extends 'layout.twig' %}

{% block content %}


<div class="container" style="margin-top:-30px;">
    <div class="row">
        <div class="col-sm-12">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body" style="line-height:.8em;">
                    <div class="d-flex align-items-center">
                        <div class="flex-fill pr-3">
                            <img src="{{ avatar(user.user_id, user.avatar) }}"
                            class="rounded-circle mr-3"
                            height="60">
                        </div>
                        <div class="flex-fill w-100">
                            <small class="text-muted">Profile</small>
                            <h5 class="mb-0">{{ user.username }} #{{ user.discriminator }}</h5>
                        </div>
                        <div class="flex-fill w-100 text-right">
                            <a href="{{ url('servers/add') }}" class="btn btn-success btn-lg">Add Server</a>
                        </div>
                        <div class="flex-fill w-50 text-right">
                            <a href="{{ url('premium') }}" class="btn btn-success btn-lg pulse">Go Premium</a>
                        </div>
                        <div class="flex-fill w-50 text-right">
                            <a href="{{ url('sponsor') }}" class="btn btn-info btn-lg pulse">Go Sponsored</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



        <div class="col-sm-12 col-lg-12">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-{{ theme == "dark" ? "transparent" : "white" }} py-3">
                    My RuneAd Voting Statistics
                </div>
                <table class="table table-hover mb-0">
                    <thead class="small text-muted border-0 bg-light">
                    <tr>
                        <th>Server</th>
                        <th>Current</th>
                        <th>All Time</th>
                        <th>This Month</th>
                        <th>7 Days</th>
                        <th>24 Hours</th>
                        <th>1 Hour</th>
                    </tr>
                    </thead>
                    {% for server in servers %}
                    {% set class = server.premium_expires > time() ? 'bg-primary' : '' %}
                    {% set seo = friendlyTitle(server.id~'-'~server.title) %}

                    <tbody>
                        <tr>
                            <td> {{ votes.server_id }}</td>
                            <td>{{ server.votes }}</td>
                            <td></td>
                            <td>{{ data['votes']['week']|number_format }}</td>
                            <td>{{ data['votes']['day']|number_format }}</td>
                            <td>{{ data['votes']['hour']|number_format }}</td>
                            <td>{{ data['votes']['hour']|number_format }}</td>
                        </tr>
                    </tbody>
                    {% else %}
                    <div class="list-group-item">
                        You have no servers listed.
                    </div>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

    {{ content|raw }}
</div>

{%  endblock %}
