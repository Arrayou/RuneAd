{%  extends 'layout.twig' %}

{% block content %}

<script src="https://cdn.quilljs.com/1.3.6/quill.js" defer></script>

<div class="container" style="margin-top:-30px;">
    <div class="row">
        <div class="col-sm-12">

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0 text-danger">
                        Delete: <strong>{{ server.title }}</strong>
                    </h5>
                    <p class="mb-0 text-{{ theme == "dark" ? "white-50" : "muted" }}">
                        Comfirm below that you wish to delete this server.
                    </p>
                </div>
                <div class="card-body">
                    {% if errors is defined %}
                        <div class="alert alert-danger">
                            <p class="mb-2">Errors were encountered when posting you server:</p>
                            <ul class="mb-0 pl-3">
                                {% for key, value in errors %}
                                <li>&bull; {{ value }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <p class="mb-5">
                        If you delete this server, you will not be able to recover any of the data. It will be
                        permanently lost!. Only click the button below if you wish for this to happen!!!
                    </p>

                    <form action="{{ url('profile/delete/'~friendlyTitle(server.id~'-'~server.title)) }}" 
                        method="post">
                    
                        <button type="submit" class="btn btn-danger">
                            Yes, Delete Server
                        </button>

                        <a href="{{ url('profile') }}" class="btn btn-link">Abort Mission</a>
                    </form>
                </div>
            </div>

            {{ content|raw }}
        </div>
    </div>
</div>

{%  endblock %}
