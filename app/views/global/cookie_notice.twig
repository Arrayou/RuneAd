
{% if hide_cookies != true %}
<div class="fixed-bottom cookie-notice py-4 bg-default text-white">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="flex-fill pr-3">
                <div class="cookie-icon text-white mt-2">
                    {{ icon('cookie') }}
                </div>
            </div>
            <div class="flex-fill">
                <h5 class="mb-0 text-white">Cookies Notice</h5>
                <p class="mb-0">
                    This website makes use of cookies to improve your experience within our website. To find out more, read our 
                    <a href="{{ url('privacy') }}" class="text-white text-underline">privacy policy</a> 
                    and <a href="{{ url('privacy') }}" class="text-white text-underline">cookie policy</a>.
                </p>
            </div>
            <div class="pl-3" style="min-width:130px;">
                <a href="#" class="btn btn-outline-white btn-block rounded-pill" id="close-cn">
                    {{ icon('check')}}
                    OKAY
                </a>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function(event) {

    $('#close-cn').click(function(event) {
        event.preventDefault();
        Cookies.set("hide_notice", true, { expires: 365 });
        window.location.reload();
    });
});
</script>
{% endif %}