{%  extends 'layout.twig' %}

{% block content %}

<script src="https://cdn.quilljs.com/1.3.6/quill.js" defer></script>

<div class="container" style="margin-top:-30px;">
    <div class="row">
        <div class="col-sm-12">

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-default">
                    <h5 class="mb-0 {{ theme =="dark" ? "text-white" : "" }}">
                        Delete: <strong>{{ server.title }}</strong>
                    </h5>
                    <p class="mb-0 {{ theme == "dark" ? "text-white-50" : "text-muted" }}">
                        Comfirm below that you wish to delete this server.
                    </p>
                </div>
                <div class="card-body">
                    {% if errors is defined %}
                        <div class="alert alert-danger">
                            <p class="mb-2">Errors were encountered when posting you server:</p>
                            <ul class="mb-0 pl-3">
                                {% for key, value in errors %}
                                <li>&bull; {{ value }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <form action="{{ url('servers/delete/'~friendlyTitle(server.id~'-'~server.title)) }}" 
                        method="post">
                    
                        <button type="submit" class="btn btn-success">
                            Yes, Delete Server
                        </button>

                        <a href="" class="btn btn-link">Abort Mission</a>
                    </form>
                </div>
            </div>

            {{ content|raw }}
        </div>
    </div>
</div>

{%  endblock %}
